<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 主色调 - 可根据品牌调整 -->
    <Color x:Key="PrimaryColor">#165DFF</Color>
    <Color x:Key="PrimaryLightColor">#4080FF</Color>
    <Color x:Key="PrimaryDarkColor">#0E42B3</Color>

    <!-- 辅助色 - 用于交互反馈 -->
    <Color x:Key="SuccessColor">#00B42A</Color>
    <Color x:Key="WarningColor">#FF7D00</Color>
    <Color x:Key="ErrorColor">#F53F3F</Color>
    <Color x:Key="InfoColor">#86909C</Color>

    <!-- 中性色 - 用于背景、文本和边框 -->
    <Color x:Key="Neutral100">#FFFFFF</Color>
    <!-- 背景 -->
    <Color x:Key="Neutral200">#F7F8FA</Color>
    <!-- 卡片背景 -->
    <Color x:Key="Neutral300">#F2F3F5</Color>
    <!-- 悬停背景 -->
    <Color x:Key="Neutral400">#E5E6EB</Color>
    <!-- 选中背景/边框 -->
    <Color x:Key="Neutral500">#C9CDD4</Color>
    <!-- 禁用元素 -->
    <Color x:Key="Neutral600">#86909C</Color>
    <!-- 辅助文本 -->
    <Color x:Key="Neutral700">#4E5969</Color>
    <!-- 次要文本 -->
    <Color x:Key="Neutral800">#1D2129</Color>
    <!-- 主要文本 -->

    <!-- 特殊用途颜色 -->
    <Color x:Key="OverlayColor">#000000</Color>
    <!-- 遮罩层 -->
</ResourceDictionary>